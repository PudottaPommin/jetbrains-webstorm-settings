<templateSet group="JavaScript">
  <template name="clog" value="console.log(`File: $FILE$ on line $LN$ and method $METHOD$ - $MESSAGE$`);" description="Better console log" toReformat="true" toShortenFQNames="true">
    <variable name="FILE" expression="fileName()" defaultValue="" alwaysStopAt="false" />
    <variable name="LN" expression="lineNumber()" defaultValue="" alwaysStopAt="false" />
    <variable name="METHOD" expression="jsMethodName()" defaultValue="" alwaysStopAt="false" />
    <variable name="MESSAGE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
</templateSet>